package com.farmaciadey.utils

import android.content.Context
import androidx.datastore.core.DataStore
import androidx.datastore.preferences.core.Preferences
import androidx.datastore.preferences.core.edit
import androidx.datastore.preferences.core.stringPreferencesKey
import androidx.datastore.preferences.preferencesDataStore
import com.farmaciadey.data.models.Usuario
import com.google.gson.Gson
import kotlinx.coroutines.flow.Flow
import kotlinx.coroutines.flow.first
import kotlinx.coroutines.flow.map
import kotlinx.coroutines.runBlocking

// Extension property to create DataStore
private val Context.dataStore: DataStore<Preferences> by preferencesDataStore(name = "farmacia_preferences")

class PreferencesManager(private val context: Context) {
    
    companion object {
        private val TOKEN_KEY = stringPreferencesKey("token")
        private val USER_KEY = stringPreferencesKey("user")
    }
    
    private val gson = Gson()
    
    // Guardar token
    suspend fun saveToken(token: String) {
        context.dataStore.edit { preferences ->
            preferences[TOKEN_KEY] = token
        }
    }
    
    // Obtener token (suspending)
    suspend fun getTokenAsync(): String? {
        return context.dataStore.data.map { preferences ->
            preferences[TOKEN_KEY]
        }.first()
    }
    
    // Obtener token (blocking) - para usar en interceptors
    fun getToken(): String? {
        return runBlocking {
            getTokenAsync()
        }
    }
    
    // Guardar usuario
    suspend fun saveUser(user: Usuario) {
        context.dataStore.edit { preferences ->
            preferences[USER_KEY] = gson.toJson(user)
        }
    }
    
    // Obtener usuario
    suspend fun getUser(): Usuario? {
        return context.dataStore.data.map { preferences ->
            val userJson = preferences[USER_KEY]
            userJson?.let { gson.fromJson(it, Usuario::class.java) }
        }.first()
    }
    
    // Obtener ID del usuario
    fun getUserId(): Int? {
        return runBlocking {
            getUser()?.id
        }
    }
    
    // Flow para observar el token
    val tokenFlow: Flow<String?> = context.dataStore.data.map { preferences ->
        preferences[TOKEN_KEY]
    }
    
    // Flow para observar el usuario
    val userFlow: Flow<Usuario?> = context.dataStore.data.map { preferences ->
        val userJson = preferences[USER_KEY]
        userJson?.let { gson.fromJson(it, Usuario::class.java) }
    }
    
    // Verificar si el usuario está logueado
    suspend fun isLoggedIn(): Boolean {
        return getTokenAsync() != null
    }
    
    // Limpiar datos de sesión (logout)
    suspend fun clearSession() {
        context.dataStore.edit { preferences ->
            preferences.remove(TOKEN_KEY)
            preferences.remove(USER_KEY)
        }
    }
}